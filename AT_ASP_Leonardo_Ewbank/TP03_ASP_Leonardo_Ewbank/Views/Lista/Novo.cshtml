
@{
    ViewData["Title"] = "Cadastrar";
}
@model Aniversariantes
<h1>Cadastrar novo aniversariante</h1>

<div id="form_cad">

    <form method="get" asp-action="Cadastrar" asp-controller="Lista" id="formCad">
        <div class="form-group">
            <label for="txtNome">Nome </label>
            <input type="text" asp-for="nome" />
            <span asp-validation-for="nome"></span>
        </div>

        <div class="form-group">
            <label for="txtSobrenome">Sobrenome </label>
            <input type="text" asp-for="sobrenome" />
            <span asp-validation-for="sobrenome"></span>
        </div>

        <div class="form-group">
            <label for="dateNasc">Data de Nascimento </label>
            <input type="date" asp-for="DataNascimento" />
            <span asp-validation-for="DataNascimento" id="dateNasc"></span>
        </div>
        <button type="submit" class="btn btn-primary" margin-top="10px">Adicionar Aniversariante</button>
    </form>

</div>

<style>
    h1{
        text-align:center;
        margin-bottom:10px;
    }
    #form_cad{
        
        display:block;
        width:200px;
        margin:0 auto;
        text-align:center; 
    }
    

</style>
